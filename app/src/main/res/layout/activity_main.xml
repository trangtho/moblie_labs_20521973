<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Row"/>

    <TableLayout
        android:id="@+id/RowLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RowView">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#aa0000" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#f2f542" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#42f587" />

    </TableRow>

    </TableLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Column"/>

        <TableLayout
            android:id="@+id/ColumnLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ColumnView"
            android:stretchColumns="0,1" >
            <TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="#d4241e" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="#f2f542" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="#42f587" />
                </LinearLayout>
            </TableRow>
        </TableLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="ListView"/>
        <TableLayout
            android:id="@+id/ListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ColumnView"
            android:stretchColumns="0,1" >
            <TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="#d4241e" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="#f2f542" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="#42f587" />
                </LinearLayout>
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="GridView"/>

        <TableLayout
            android:id="@+id/GridViewLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:stretchColumns="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/GridView">

            <TableRow android:layout_width="wrap_content">

                <LinearLayout

                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:background="#91e8eb"
                    android:layout_margin="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="He'd have you all unravel at the"
                        android:textColor="#0f0e0f"
                        android:textSize="5dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:background="#42f5f2"
                    android:layout_margin="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Heed not the rabble"
                        android:textColor="#0f0e0f"
                        android:textSize="5dp" />
                </LinearLayout>
            </TableRow>

            <TableRow>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:background="#3eafb3"
                    android:layout_margin="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Sound of screams but the"
                        android:textColor="#0f0e0f"
                        android:textSize="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:background="#23a4a8"
                    android:layout_margin="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Who scream"
                        android:textColor="#0f0e0f"
                        android:textSize="5dp" />
                </LinearLayout>
            </TableRow>

        </TableLayout>

    </LinearLayout>

</ScrollView>